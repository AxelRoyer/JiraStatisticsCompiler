@import "th.functions"
@import "th.variables"

body
    font-family basetypeface
    font-size typesize
    line-height half
    font-weight thin
    color dark

::-webkit-input-placeholder {
    color: rgba(0,0,0,0.33);
}

:-moz-placeholder {
    color: rgba(0,0,0,0.33);
}

::-moz-placeholder {
    color: rgba(0,0,0,0.33);
}

:-ms-input-placeholder {
    color: rgba(0,0,0,0.33);
}

li label
    float left
    line-height threequarter
    color dark
    height threequarter
    font-size bigtype
    width 266px
    font-weight 600
    letter-spacing -0.5px

body li.taghubInput, div.control-view > div:last-child > form > li, .itemControls form > li, #projectdiv form > li, #formdiv form > li, #childrendiv li.chld, .notify li, .section>form>ul>li
    list-style-type none
    padding 2px half 4px half
    min-height threequarter
    background-color transparent
    width auto
    display block
    float none
    margin 0 0 0 0
    height auto
    border-bottom solid 8px #fff
    text-align left
    padding-top: 3px;
    padding-bottom: 4px;

body li.taghubInput, body label.taghubInput
    display: block;
    float: none !important;

input[type="text"], input[type="number"], input[type="password"], .chzn-container .chzn-search input, .hollowInputText
    width eight
    line-height normal
    color dark
    font-family basetypeface
    padding 0 0 0 quarter
    background-color light
    border-radius(2px)
    border solid pixel betweener
    height 27px
    font-size 16px
    letter-spacing -0.5px

input::selection {
    color: #3399ff;
    background: rgba(51, 153, 255, 0.25);
}

input::-moz-selection {
    color: #3399ff;
    background: rgba(51, 153, 255, 0.25);
}

input[type=text]:focus, input[type=password]:focus, input[type=number]:focus, .chzn-container .chzn-search input:focus
    box-shadow #66ccff -1px -1px 0px, #66ccff 1px 1px 0px, #66ccff -1px 1px 0px, #66ccff 1px -1px 0px
    border-color #66ccff
    background-color #e0efff
    color #123

input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

::-webkit-scrollbar {
    width: 16px;
}

::-webkit-scrollbar-track, ::-webkit-scrollbar-corner {
    -webkit-box-shadow: none;
    background-color: transparent;
    -webkit-border-radius: 0px;
    border-radius: 0px;
    margin: 0px
}

::-webkit-scrollbar-thumb {
    -webkit-border-radius: 6px;
    border-radius: 6px;
    background: rgba(102, 102, 107, 0.50);
    -webkit-box-shadow: none;
    border: solid 3px transparent;
    background-clip: padding-box;
}

::-webkit-scrollbar-thumb:window-inactive {
	background: rgba(102, 102, 107, 0.25);
}
