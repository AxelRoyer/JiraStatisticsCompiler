@import 'th.functions'
@import 'th.variables'

#ui-datepicker-div
    border-left none

#ui-datepicker-div td:first-child
    border-left none
    width 38px
    min-width 38px

.ui-slider
    position relative
    text-align left

.ui-slider .ui-slider-handle
    position absolute
    z-index 2
    width 9px
    height 9px
    margin-left -5px !important
    -webkit-appearance none
    border-radius(6px)
    background-color #fff
    border solid 1px #ab37c8
    cursor pointer

.ui-slider .ui-slider-handle:focus
    outline none

.ui-slider .ui-slider-range
    position absolute
    z-index 1
    font-size .7em
    display block
    border 0
    background-position 0 0

.ui-slider-horizontal
    top 7px
    height 1px
    background-color #ab37c8
    border-top #eee 1px solid

.ui-slider-horizontal .ui-slider-handle
    top -5px
    margin-left -.6em

.ui-slider-horizontal .ui-slider-range
    top 0
    height 100%

.ui-slider-horizontal .ui-slider-range-min
    left 0

.ui-slider-horizontal .ui-slider-range-max
    right 0

.ui-slider-vertical
    width .8em
    height 100px

.ui-slider-vertical .ui-slider-handle
    left -.3em
    margin-left 0
    margin-bottom -.6em

.ui-slider-vertical .ui-slider-range
    left 0
    width 100%

.ui-slider-vertical .ui-slider-range-min
    bottom 0

.ui-slider-vertical .ui-slider-range-max
    top 0

.ui-timepicker-div .ui-widget-header
    margin-bottom 8px

.ui-timepicker-div dl
    text-align left

.ui-timepicker-div dl dt
    height 25px
    margin-bottom -25px

.ui-timepicker-div dl dd
    margin 0 10px 10px 65px
    height 12px

.ui-timepicker-div td
    font-size: 90%

.ui-tpicker-grid-label
    background none
    border none
    margin 0
    padding 0

.ui_tpicker_second_label, .ui_tpicker_second, .ui_tpicker_millisec_label, .ui_tpicker_millisec, .ui_tpicker_timezone_label, .ui_tpicker_timezone
    display none

#ui-datepicker-div
    width 266px
    background-color rgba(250, 250, 250, 0.95)
    z-index widget-layer !important
    position absolute
    top -100px
    margin-left -1px
    box-shadow inset rgba(255,255,255,0.67) 0px -100px 100px, rgba(0,50,100,0.25) 0px 2px 3px, rgba(0,50,100,0.01) 0px 7px 2px
    border-radius(4px)
    border solid #fff 1px

table.ui-datepicker-calendar
    width 266px
    padding 0px
    margin 0px
    overflow hidden
    margin-bottom -1px

table.ui-datepicker-calendar th, table.ui-datepicker-calendar td, table.ui-datepicker-calendar td:last-child
    padding 0px
    font-size 14px
    vertical-align middle
    width 37px
    min-width: 37px
    text-align center
    color #b1b1bb

table.ui-datepicker-calendar td
    cursor pointer
    border-left-color transparent
    border-bottom-color transparent

table.ui-datepicker-calendar .ui-state-disabled, a.ui-state-disabled
    cursor auto
    color #66666b

table.ui-datepicker-calendar td a
    font-size 16px
    font-weight 400 !important
    line-height 37px
    color #3399ff

table.ui-datepicker-calendar td a:hover
    font-weight 900

.ui-datepicker-title
    font-size 16px
    text-align center
    color rgb(102,102,107)
    font-weight 400
    line-height one
    width 100%
    float left
    margin-top -32px
    z-index -1
    height 0px
    overflow visible

.ui-datepicker-prev, .ui-datepicker-current
    float left
    font-size 14px
    font-weight 400
    line-height 32px
    color #3399ff
    cursor pointer
    background-color transparent
    border none
    padding 0 !important
    width 76px
    text-align center
    z-index 1

.ui-datepicker-current:focus, .ui-datepicker-close:focus
    outline none !important

.ui-datepicker-next, .ui-datepicker-close
    float right
    font-size 14px
    font-weight 400
    line-height 32px
    color #3399ff
    cursor pointer
    background-color transparent
    border none
    padding 0 !important
    width 76px
    text-align center
    z-index 1

#ui-datepicker-div dl
    -webkit-margin-before 0em
    -webkit-margin-after 0em
    -webkit-margin-start 0px
    -webkit-margin-end 0px
    margin 5px 13px 5px 13px
    font-weight 300
    font-size 15px
    color rgb(102,102,107)
    line-height 16px

#ui_tpicker_time_sailingdatetime
    font-size 15px
    text-align center
    color rgb(102,102,107)
    font-weight 400
    letter-spacing 0px
    -webkit-margin-start 0px
    line-height normal

#ui_tpicker_time_label_sailingdatetime
    text-transform uppercase
    font-size 10px
    text-align center
    color #999
    font-weight 900
    display none

#ui-datepicker-div .ui-icon
    display inline

#ui-datepicker-div tr:nth-child(even) td
    background-color transparent

#ui-datepicker-div .ui-datepicker-current-day
    background-color #3399ff !important
    border-radius(3px)

#ui-datepicker-div .ui-datepicker-current-day a
    color #f !important
